@model ProjectManagementTool.Models.ViewModels.PGMToolVM
@{
    ViewBag.Title = "Manage";
    Layout = "~/Views/Shared/_PMGTLayout.cshtml";
}


<div class="grid-y medium-grid-frame" >

    <div class="cell medium-auto medium-cell-block-container">
        <div class="grid-x grid-padding-x grid-padding-x ">
            
            <div class="small-12 columns callout large-flex-child-auto border-none">
               
                @{Html.RenderPartial("_Main", Model);}
            </div>
        </div>

    </div>


</div>



@section scripts{
    <script type="text/javascript">
        $('#projectList').DataTable({
            'paging': true,
            'ordering': true,
            'info': true
        });

        $(document).on("change", "#checkAll_materialList", function () {
            if ($(this).is(":checked")) {
                $(".cb_material_list").attr("checked", "checked");
            } else {
                $(".cb_material_list").removeAttr("checked");
            }
            
        })
    

    </script>
}



