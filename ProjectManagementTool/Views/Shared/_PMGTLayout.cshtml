<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - Project Management Application</title>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/layout")

</head>
<body>

    <div class="container-fluid">
        <div class="row login">
            @Html.Partial("_LoginPartial")
        </div>

        <div class="title-bar" data-responsive-toggle="responsive-menu" data-hide-for="medium" style="display:none;">
            <button class="menu-icon" type="button" data-toggle="responsive-menu"></button>
            <div class="title-bar-title">Menu</div>
        </div>

        <nav class="row navbar navbar-expand-lg navbar-light bg-light top-bar" id="responsive-menu">
            <a href="#" class="navbar-brand">
                <i class="comanyLogo fa fa-compass size-48"></i>
                <span class="hidden-sm">Project Management</span>
                <span class="hidden-lg hidden-md">PMGMT</span>
            </a>
            <div class="col-sm-1 col-lg-4 hidden-lg menu-icon">
                <button class="navbar-toggler float-md-right float-sm-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa fa-navicon size-21"></i>
                </button>
            </div>
            <div class="col-lg-5 collapse navbar-collapse navbar-expand" id="navbarSupportedContent">
                <ul class="col-lg-8 navbar-nav mr-auto">
                    <li class="nav-item">@Html.ActionLink("Home", "Overview", "PGMTool", null, htmlAttributes: new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("About", "About", "Home", null, htmlAttributes: new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", null, htmlAttributes: new { @class = "nav-link" })</li>
                </ul>
            </div>

        </nav>

    </div>
    <div class="container-fluid body-content">
            @RenderBody()
    </div>
    <footer class="footer bottom fixed">
        <div class="flex-container">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </div>

    </footer>



   
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/js/piechart")
    @RenderSection("scripts", required: false)

</body>
</html>
