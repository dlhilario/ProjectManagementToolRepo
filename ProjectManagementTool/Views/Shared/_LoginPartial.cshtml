@using Microsoft.AspNet.Identity


@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="menu align-right size-12 ">
            <li>
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Manage", "Account", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="menu align-right size-12 arrow-right">
        <li class="padding-2"><a href="/Account/Register" id="registerLink" class="">Register</a></li>
        <li class="padding-2"><a href="/Account/Login" id="loginLink">Log in</a></li>
    </ul>
}

